---
import "@/styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Psyduck Stack", description = "Psyduck's Infinite Headache Tower - A stacking game" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#4A148C" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Psyduck Stack" />
    
    <link rel="icon" type="image/svg+xml" href="/psyduck-stsck/favicon.svg" />
    <link rel="manifest" href="/psyduck-stsck/manifest.json" />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap"
      rel="stylesheet"
    />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
